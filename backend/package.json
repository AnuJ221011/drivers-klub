    "build": "npm run build --workspaces",
    "postinstall": "npm run generate -w @driversklub/database && npm run build -w @driversklub/database && npm run build -w @driversklub/common && npm run build --workspaces",
    "start": "pm2-runtime start ecosystem.config.cjs",
    "lint": "eslint . --ext .ts",
