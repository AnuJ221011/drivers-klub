    "item": [
        {
            "name": "1. Authentication",
            "item": [
                {
                    "name": "Driver Login (Auto-Set Token)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.accessToken) {",
                                    "    pm.environment.set(\"driver_token\", jsonData.accessToken);",
                                    "    console.log(\"Driver Token set!\");",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"phone\": \"9123456780\",\n    \"otp\": \"000000\",\n    \"verifiedKey\": \"pass\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/verify-otp",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "verify-otp"
                            ]
                        }
                    }
                },
                {
                    "name": "Admin Login (Auto-Set Token)",
                    "event": [
