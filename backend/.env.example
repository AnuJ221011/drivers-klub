# Server Configuration
NODE_ENV=development
PORT=4000

# Database
# Connect to your local or cloud PostgreSQL instance
DATABASE_URL="postgresql://user:password@localhost:5432/driversklub?schema=public"

# JWT Authentication
# Generate strong secrets for production (e.g., `openssl rand -base64 32`)
JWT_ACCESS_SECRET=your_access_token_secret
JWT_REFRESH_SECRET=your_refresh_token_secret

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3

# OTP Development Bypass
# ⚠️ REQUIRED in Development. REMOVE in Production.
# If set, verify-otp accepts this key to bypass real Exotel check.
OTP_BYPASS_KEY=pass

# Exotel SMS Configuration (Required for Production)
EXOTEL_ACCOUNT_SID=your_exotel_sid
EXOTEL_API_KEY=your_exotel_api_key
EXOTEL_API_TOKEN=your_exotel_api_token
EXOTEL_SENDER_ID=DRIVKL
