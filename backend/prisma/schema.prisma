generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

////////////////////
/// ENUMS
////////////////////

enum UserRole {
  SUPER_ADMIN
  OPERATIONS
  MANAGER
  DRIVER
}

enum TripStatus {
  BOOKED
  ALLOTMENT_PENDING
  DRIVER_ALLOTTED
  ONGOING
  COMPLETED
  CANCELLED
  FAILED
}

enum BodyType {
  SEDAN
  SUV
  HATCHBACK
}

enum FuelType {
  PETROL
  DIESEL
  CNG
  EV
}

////////////////////
/// USERS (ADMIN)
////////////////////

model User {
  id       String   @id @default(uuid())
  name     String
  phone    String   @unique
  role     UserRole
  isActive Boolean  @default(true)

  createdAt DateTime @default(now())
}

////////////////////
/// DRIVERS
////////////////////

model Driver {
  id       String  @id @default(uuid())
  name     String
  phone    String  @unique
  isActive Boolean @default(true)

  trips    Trip[]
  vehicles Vehicle[]

  dailyAssignments DailyAssignment[]

  createdAt DateTime @default(now())
}

////////////////////
/// VEHICLES
////////////////////

model Vehicle {
  id       String   @id @default(uuid())
  number   String   @unique
  brand    String
  model    String
  bodyType BodyType
  fuelType FuelType
  isActive Boolean  @default(true)

  driverId String?
  driver   Driver? @relation(fields: [driverId], references: [id])

  trips Trip[]

  dailyAssignments DailyAssignment[]

  createdAt DateTime @default(now())
}

////////////////////
/// DAILY ASSIGNMENT
////////////////////

model DailyAssignment {
  id        String   @id @default(uuid())
  date      DateTime
  driverId  String
  vehicleId String

  driver  Driver  @relation(fields: [driverId], references: [id])
  vehicle Vehicle @relation(fields: [vehicleId], references: [id])

  createdAt DateTime @default(now())

  @@unique([date, driverId])
  @@unique([date, vehicleId])
}

////////////////////
/// TRIPS
////////////////////

model Trip {
  id        String     @id @default(uuid())
  bookingId String     @unique
  passenger String
  pickup    String
  drop      String
  status    TripStatus

  driverId  String?
  vehicleId String?

  driver  Driver?  @relation(fields: [driverId], references: [id])
  vehicle Vehicle? @relation(fields: [vehicleId], references: [id])

  events TripEvent[]

  createdAt DateTime @default(now())
}

////////////////////
/// TRIP EVENTS (AUDIT)
////////////////////

model TripEvent {
  id     String     @id @default(uuid())
  tripId String
  status TripStatus
  note   String?

  trip      Trip     @relation(fields: [tripId], references: [id])
  createdAt DateTime @default(now())
}

////////////////////
/// WHATSAPP OTP
////////////////////

model WhatsappOtp {
  id        String   @id @default(uuid())
  phone     String
  otpHash   String
  expiresAt DateTime
  verified  Boolean  @default(false)

  createdAt DateTime @default(now())
}
